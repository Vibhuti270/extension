{
    "name":"Tab activity_tracker",
    "version":"1.0.0", 
    "description":"This extension will keep track of how much time you're spending on one specific tab of chrome",
    "manifest_version":2,
    "background": {
        "service_worker": "background.js"
      },
    "page_action":{
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    },
    
    "icons":{
        "128": "logo.png"
    },
    "permissions": ["activeTab","webRequest","declarativeContent","storage","tabs","<all_urls>"]
}